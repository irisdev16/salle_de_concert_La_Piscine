{% extends 'base.html.twig' %}

{% block title %}Hello EstablishmentController!{% endblock %}

{% block main %}


    <section class="container my-5">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1>
                Il y a {{ events | length }}
                    {% if events | length > 1 %} événements
                        {% else %}événements
                    {% endif %}
                actuellement.
            </h1>
            <a href="{{ path('event_create') }}" class="btn btn-primary">Créer un nouvel événement</a>
        </div>

        <div class="row">
            {% for event in events %}
                <div class="col-md-6 col-lg-4 mb-4">
                    <a href="{{ path('event_show', {id:event.id}) }}">
                        <div class="card shadow-sm h-100">
                            <div class="card-body">
                                <h5 class="card-title">{{ event.title }}</h5>
                            </div>
                        </div>
                    </a>
                </div>
            {% endfor %}
        </div>
    </section>


{% endblock %}