{% extends 'base.html.twig' %}

{% block title %}Hello AnimatorController!{% endblock %}

{% block main %}


    <section class="container my-5">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h3>Il y a {{ animators | length }} animateurs actuellement</h3>
            <a href="{{ path('animator_create') }}" class="btn btn-primary">Cr√©er un nouvel animateur</a>
        </div>

        <div class="row">
            {% for animator in animators %}
                <div class="col-md-6 col-lg-4 mb-4">
                    <a href="{{ path('animator_show', {id:animator.id}) }}">
                        <div class="card shadow-sm h-100">
                            <div class="card-body">
                                <h5 class="card-title">{{animator.firstname }} {{ animator.lastname}} </h5>
                            </div>
                        </div>
                    </a>
                </div>
            {% endfor %}
        </div>
    </section>


{% endblock %}
