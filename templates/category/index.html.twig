{% extends 'base.html.twig' %}

{% block title %}Hello CategoryController!{% endblock %}

{% block main %}


<section class="container my-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>
            Il y a {{ categories | length }}
                {% if categories | length > 1 %} catégories
                    {% else %}catégorie
                {% endif %}
            actuellement.
        </h1>
        <a href="{{ path('category_create') }}" class="btn btn-primary">Créer une nouvelle catégorie</a>
    </div>

    <div class="row">
        {% for category in categories %}
            <div class="col-md-6 col-lg-4 mb-4">
                <a href="{{ path('category_show', {id:category.id}) }}">
                    <div class="card shadow-sm h-100">
                        <div class="card-body">
                            <h5 class="card-title">{{ category.name }}</h5>
                        </div>
                    </div>
                </a>
            </div>
        {% endfor %}
    </div>
</section>

{% endblock %}