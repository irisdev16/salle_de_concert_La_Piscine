{% extends 'base.html.twig' %}

{% block title %}Hello EstablishmentController!{% endblock %}

{% block main %}


    <section class="container my-5">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1>
                Il y a {{ establishments | length }}
                    {% if establishments | length > 1 %} établissements
                        {% else %}établissement
                    {% endif %}
                actuellement.
            </h1>
            <a href="{{ path('establishment_create') }}" class="btn btn-primary">Créer un nouvel établissement</a>
        </div>

        <div class="row">
            {% for establishment in establishments %}
                <div class="col-md-6 col-lg-4 mb-4">
                    <a href="{{ path('establishment_show', {id:establishment.id}) }}">
                        <div class="card shadow-sm h-100">
                            <div class="card-body">
                                <h5 class="card-title">{{ establishment.name }}</h5>
                            </div>
                        </div>
                    </a>
                </div>
            {% endfor %}
        </div>
    </section>


{% endblock %}
